@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Listesi</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach(var i in Model){
        <tr>
            <td>@i.AboutID</td>
            <td>Başlık</td>
            <td><a href="#" class="btn btn warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn danger">Pasif Yap</a></td>
        </tr>
    }
</table>

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal">
    Yeni hakkımızda yazı girişi
</button>

@Html.Action("AboutPartial","About")